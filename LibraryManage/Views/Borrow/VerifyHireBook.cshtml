
@using LibraryManage.Models
@{
    ViewBag.Title = "VerifyHireBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="javascript:void(0);" onclick="history.go(-1);"><h2>VerifyHireBook</h2></a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID Borrow</th>
            <th scope="col">ID Book</th>
            <th scope="col">ID User</th>
            <th scope="col">ID Employee</th>
            <th scope="col">Borrow Date</th>
            <th scope="col">Pay Day</th>
            <th scope="col">Notes</th>
            <th scope="col"> </th>
        </tr>
    </thead>
    @foreach (var b in Model)
    {
        <tbody>
            <tr>
                @using (Html.BeginForm("", ""))
                {
                    <td scope="col">@b.ID_Borrow</td>
                    <td scope="col">@b.ID_Book</td>
                    <td scope="col">@b.ID_User</td>
                    <td scope="col">@this.Session["ID"]</td>
                    <td scope="col">@b.Borrow_Date</td>
                    <td scope="col">@b.Pay_Day</td>
                    <td scope="col">@b.Notes</td>
                    <td scope="col">
                        @Html.ActionLink("VERIFY", "UpdateVerify", new { IdBorrow = b.ID_Borrow, Idbook = b.ID_Book, Idemployee = this.Session["ID"] }, new { @type = "button", @class = "btn btn-primary", @style = "width: 100%" })<br />
                        @Html.ActionLink("DELETE", "DeleteVerify", new { IdBorrow = b.ID_Borrow, Idbook = b.ID_Book }, new { onclick = "return confirm('Are sure wants to delete?');", @type = "button", @class = "btn btn-danger", @style = "width: 100%" })
                    </td>
                }
            </tr>
        </tbody>

    }
</table>
