                    <td id="type" scope="col">@b.Type</td>
                    <td scope="col">@b.First_Name</td>
                    <td scope="col">@b.Last_Name</td>
                    <td scope="col">@b.Date_of_Birth</td>
                    <td scope="col">@b.Notes</td>
