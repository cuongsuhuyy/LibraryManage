
@using LibraryManage.Models;
@{
    ViewBag.Title = "UserAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UserAccount</h2>

@Html.ActionLink("Create new user", "Create", "UserAccount", new { @type = "button", @class = "btn btn-light" })
