                                <div class="col-md-12 text-center" style="max-height: 40px; height: 40px;">
                                    @Model[i].Name
                                </div>
                                <div class="col-md-12">
                                    @Html.ActionLink("DETAILS", "Detail", new { IdBook = Model[i].ID_Book }, new { @type = "button", @class = "btn btn-info", @style = "width: 100%" })
