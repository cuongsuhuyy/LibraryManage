
@{
    ViewBag.Title = "BookViewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BookViewUser</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col"> </th>
            <th scope="col"> </th>
