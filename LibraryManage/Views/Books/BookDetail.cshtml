
@{
    ViewBag.Title = "BookDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/Books/BookDetail.css" rel="stylesheet" type="text/css" />
</head>

<a href="javascript:void(0);" onclick="history.go(-1);"><h2>BookDetail</h2></a>

<div class="container">
    <div class="row">
        <div class="col-lg-7 col-md-6">
            <img src="@("https://localhost:44335/" + Model.PathImage)" style="visibility: visible; animation-name: fadeInLeft;" class="img-responsive wow fadeInLeft animated" />
        </div>
        <div class="col-lg-4 col-md-5">
            <h1 class="font-oswald">@Model.Name</h1>
            <h3 class="margin-top5">@Model.Description</h3>
            <div class="row">
                <div class="col-md-6">
                    <h4 class="text-right">ID:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.ID_Book</h4>
                </div>

                <div class="col-md-6">
                    <h4 class="text-right">Pulishing Year:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.Publishing_Year</h4>
                </div>

                <div class="col-md-6">
                    <h4 class="text-right">Publishing Location:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.Publishing_Location</h4>
                </div>

                <div class="col-md-6">
                    <h4 class="text-right">Type:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.Type</h4>
                </div>

                <div class="col-md-6">
                    <h4 class="text-right">Date add to Library:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.Date_add_to_library</h4>
                </div>

                <div class="col-md-6">
                    <h4 class="text-right">Location:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.Location_in_library</h4>
                </div>

                <div class="col-md-6">
                    <h4 class="text-right">Quantily:</h4>
                </div>
                <div class="col-md-6">
                    <h4>@Model.Quantily</h4>
                </div>
            </div>
        </div>
    </div>
</div>

